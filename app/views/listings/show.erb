

<style>
body {
  background-image: url('https://images.unsplash.com/photo-1494608875625-6a44a9aa61f4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=975&q=80');
  background-size: cover;
}

img {
  width: 99%;

}
</style>


<h2><%= @listing.title %>  ($<%= @listing.price %>)  </h2>

<p><%= image_tag "#{@listing.image_url}" %></p><br>
<h2> Location:  <%= @listing.location %>      </h2>
<h2> Description:  <%= @listing.description %>   </h2>
  <br></br>

<h3>List of Customers:</h3>

<ol>
    <% @listing.users.each do |user| %>
    <li><%=link_to user.name, user %>  </li>
    <% end %>
</ol>
<% if session[:user_id] %>
  <%= form_for @reservation do |f| %>
    <%= f.hidden_field :listing_id, value: @listing.id %>
    <%= f.submit "Reserve It" %>
  <% end %>
<% end %>
