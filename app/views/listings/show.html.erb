<h2><%= @listing.title %> ($<%= @listing.price %>)  </h2>
<h2>Location:</h2> <h3><%= @listing.location.upcase %></h3>


<p> <%= image_tag"#{@listing.image_url}", :size => "260x180"%> </p>
<h2>Description:</h2> <h3><%= @listing.description %></h3>

<h2>Users Who Booked This Spot Before:</h2>
<ol>
  <% @listing.users.each do |user| %>
  <li> <%= user.name %> </li>
  <% end %>
</ol>

<%= form_for @reservation do |f| %>
<%= f.hidden_field :listing_id, :value => @listing.id%>
<%= f.submit "Reserve #{@listing.title}" %>
<% end %>
