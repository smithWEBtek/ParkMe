<% if !flash[:message].nil? %>
<%= flash[:message] %>
<% end %>

<% if !flash[:success].nil? %>
<%= flash[:success] %>
<% end %>

<%=form_for @user do |f|%>
<p>
    <%=f.label :name%>
    <%=f.text_field :name %>
</p>

<p>
    <%=f.label :username%>
    <%=f.text_field :username %>
</p>

<p>
    <%=f.label :password%>
    <%=f.password_field :password %>
</p>

<%=f.submit  %>
<%end%>
