<h3>Create a New User</h3>

<ol>
  <%if flash[:errors] %>
  <% flash[:errors].each do |message| %>
   <li> <%=  message %></li>
   <% end %>
   <% end %>
</ol>

<%= form_for @user do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :username %>
<%= f.text_field :username %>
<%= f.label :password %>
<%= f.password_field :password %>
<%= f.submit %>
<% end %>
